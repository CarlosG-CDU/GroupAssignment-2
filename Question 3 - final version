#was having trouble getting function to work so Chat GPT helped me refine it:

import turtle

def koch(t, length, order):  
    if order == 0:  
        t.forward(length)
    else:     
        length /= 3
        koch(t, length, order - 1)
        t.right(60)
        koch(t, length, order - 1)
        t.left(120)
        koch(t, length, order - 1)
        t.right(60)
        koch(t, length, order - 1)

# --- User inputs ---
length = float(input("Enter the length of each side: "))
order = int(input("Enter the order (recursion depth): "))
sides = int(input("Enter the number of sides (3 for snowflake, 4 for square, etc.): "))

# --- Setup turtle ---
t = turtle.Turtle()
t.speed(0)

# Draw Koch pattern
for _ in range(sides):
    koch(t, length, order)
    t.right(360 / sides)

turtle.done()

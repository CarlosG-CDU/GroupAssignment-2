import turtle as trl
import math


def koch(t, length, order):                                     ### https://pythonguides.com/fractal-python-turtle/
    if order == 0:  ##base case, if order = 0 
        t.forward(length)
    else:     
        length /= 3
        koch(t, length, order - 1)
        t.right(60)
        koch(t, length, order - 1)
        t.left(120)
        koch(t, length, order - 1)
        t.right(60)
        koch(t, length, order - 1)
        

#User inputs
length = float(input("Enter the length of each side: "))
order = int(input("Please Enter how many times the pattern should repeat: "))
sides = int(input("Enter the number of sides (3 for snowflake, 4 for square, etc.): "))

#Setup turtle
screen = trl.Screen()
t = trl.Turtle()
t.speed(0)
#t.penup
#t.goto(50, 50)

#t.pendown
#t.write("'Fantastic, you drew a fractal.'")

t.penup
t.goto(0,0)
t.pendown

# repeat the pattern over the amount of sides
for _ in range(sides):
    koch(t, length, order)
    t.right(360 / sides)  #divide 360 by the amount of sides to get the correct angle and so the drawing ends in starting position





trl.done()
